var show_events = "<%= j render(:partial => 'show_events') %>"
var day_selection = "<%= j render(:partial => 'day_selection') %>"
var host_buttun = document.getElementById('host_buttun');
var date = getURLParameter(host_buttun.href, 'date');

$('#show_events').html(show_events);
$('#day_selection').html(day_selection);

if (date == null) {
  host_buttun.href = host_buttun.href + '&date=<%= params[:date] %>'
} else {
  host_buttun.href = host_buttun.href.replace(/date=[^&]+/, 'date=<%= params[:date] %>');
}
function getURLParameter(url, name) {
  return (RegExp(name + '=' + '(.+?)(&|$)').exec(url)||[,null])[1];
};