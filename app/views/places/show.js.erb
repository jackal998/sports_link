<% params[:distance] ? distance = params[:distance] : distance = params[:params_to_post]['0'][:distance] %>
<% params[:date] ? date = params[:date] : date = params[:params_to_post]['0'][:date] %>

var show_events = "<%= j render(:partial => 'show_events') %>"
var day_selection = "<%= j render(:partial => 'day_selection', :locals => { distance: distance, date: date}) %>"
var host_buttun = document.getElementById('host_buttun');
var host_buttun_date = getURLParameter(host_buttun.href, 'date');

$('#show_events').html(show_events);
$('#day_selection').html(day_selection);

if (host_buttun_date == null) {
  host_buttun.href = host_buttun.href + '&date=<%= date %>'
} else {
  host_buttun.href = host_buttun.href.replace(/date=[^&]+/, 'date=<%= date %>');
}
