<div class="container content">
  <div class="row">
    <div class="col-sm-2 col-md-2 col-xs-2"><h3>
      <%= link_to "<", places_path %></h3>
    </div>

    <div id="day_selection" class="col-sm-8 col-md-8 col-xs-8 centered">
      <%= render :partial => "day_selection" %>
    </div> 
    
    <nav class="open col-md-2 col-sm-2 col-xs-2">
      <ul>
        <li>
          <%= link_to "Home", places_path %>
        </li>
        <li><a href="#">about</a></li>
        <li><a href="#">contact</a></li>  
      </ul>
    </nav>

    <div id="menu-trigger">
      <img class="hamburger" src="images/menu.png" alt="trigger">
    </div>
  </div>  
  
  <div class="row">
    <div class="place_detail col-md-4 col-sm-4 col-xs-4">
      <div>
        <img src="http://placehold.it/100x100" alt="revenue image">
        <%#= @place.image %>
      </div>
    </div>

    <div class=" col-md-8 col-sm-8 col-xs-8">
      <div> 
        <%= @place.name %>    
      </div>
      <div>
        <%= '距離' + params[:distance] + '公尺' %>
      </div>
      <div>
        Ratings: <%= rating_for @place, "quality", enable_half: true %>
      </div>
    </div>
    <div class="clearfix"></div>  
    <hr>
    <div><%#= @place.nearby_store %></div>
  </div>

  <div><h4>Join Games</h4></div>

  <div id="show_events">
    <%= render :partial => "show_events" %>
  </div>

    <% if @events.count <= 4 %>
      <div>
        <%= button_to "Create Event", Event.new %>  
      </div>
    <% end %> 
</div>

<script>
$(document).on('ready', function(){
    $('#input-3').rating({displayOnly: true, step: 0.5});
});

$(document).ready(function() {
    
    $('#menu-trigger').click(function(){
        $('nav').toggleClass('open');
    });

});
</script>