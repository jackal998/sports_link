<% params[:distance] ? distance = params[:distance] : distance = params[:params_to_post]['0'][:distance] %>
<% params[:date] ? date = params[:date] : date = params[:params_to_post]['0'][:date] %>

var more_events_link = document.getElementById('more_events_link');
var nav_host_event_link = document.getElementById('nav_host_event_link');
<% if @event.present? %>
  var event = '<%= j render(:partial => "have_event", :locals => {event: @event, place_id: place_id, distance: distance, date: date}) %>'
<% else %>
  var event = '<%= j render(:partial => "no_event", :locals => {place_id: place_id, distance: distance, date: date}) %>'
<% end %>

$('#event').html(event);
more_events_link.href = '<%= raw place_path(@place.place_id, date: date, distance: distance) %>'
nav_host_event_link.href = '<%= raw new_event_path(place_id: @place.place_id, date: date, distance: distance) %>'

$('#call_to_action').addClass('close');