 <video class="background1" mute="1" loop="" aria-flowto="hype-obj-wgp3WlIFSutvPTVg" autoplay="" style="pointer-events: auto; position: absolute; overflow: visible; z-index: -1; width: 1663; height: 935;top: -49px; left: -197px; "><source src="  https://s3-ap-northeast-1.amazonaws.com/sportslinkpj/video/sportslink.mp4" type="video/mp4"></video>
 
<div class="background2 close">
  <img src="/images/background2.png" alt="background">
</div>

<div class="centered", style="z-index: 1">
  <div class="row"> 
    <div class="logo">
      <img src="/images/icon.png" alt="Sports Link Logo"/>
    </div>
 
    <div class="marketing_tagline">
      <h2>揪人打球</h2>
      <h3>無時無刻，全年無休</h3>
    </div>

    <div>
      <%= link_to user_facebook_omniauth_authorize_path do %>
        <div class="btn btn-social btn-facebook">
          <span class="fa fa-facebook"></span>
          Facebook 登入
        </div>
      <% end %>
    </div>
    <br>
    <div class="close">
      <div id="email_button" class="btn btn-default">
        用戶登入
      </div>

      <div id="email_info" class="close">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :信箱 %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :密碼 %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :記住我 %>
            </div>
          <% end -%>
          <div class="actions">
            <%= f.submit "登入", class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="clearfix"></div>

    <%= link_to "訪客模式", places_path, class: "btn btn-default" %>

    <div>
      <%#= render "devise/shared/links" %>
    </div> 
  </div>
</div>
  
