<%= form_for event, :url => events_path(place_id: place_id, distance: distance, date: date) do |f| %>
  <div class="container text-center">
    <div class="row">
      <h3 class="glyphicon glyphicon-time">
        開始：<%= f.time_field(:start_at, :min => Time.now.strftime("%I:%M%p")) %>
      </h3> 

      <div class="clearfix"></div>
      <hr>

      <h3 class="glyphicon glyphicon-time">
        結束：<%= f.time_field(:end_at, :min => Time.now.strftime("%I:%M%p")) %>
      </h3> 
    </div>
    <br />
  </div>
  <hr>
  <div class="form-group">
    <h4>
      <%= f.label :characteristic_of_user, "特徵：" %>
    </h4>
    <%= f.text_field :characteristic_of_user, :class => "form-control" %>
  </div> 
  <%= link_to '取消', root_path, :class => "pull-right btn btn-link" %>
  <%= f.submit "確認", :class => "pull-right btn btn-link" %>
<% end %>