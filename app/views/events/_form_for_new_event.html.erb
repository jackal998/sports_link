<%= form_for event, :url => events_path(place_id: place_id, distance: distance, date: date) do |f| %>
  <div class="container text-center">
    <div class="row">
      <% if date == 'today' %>
        <h3 class="glyphicon glyphicon-time">
          開始：<%= f.time_field(:start_at, :min => Time.now.strftime("%I:%M%p")) %>
        </h3> 
        <div class="clearfix"></div>
        <hr>
        <h3 class="glyphicon glyphicon-time">
          結束：<%= f.time_field(:end_at, :min => Time.now.strftime("%I:%M%p")) %>
        </h3> 
      <% else %>
        <h3 class="glyphicon glyphicon-time">
          開始：<%= f.time_field(:start_at) %>
        </h3> 
        <div class="clearfix"></div>
        <hr>
        <h3 class="glyphicon glyphicon-time">
          結束：<%= f.time_field(:end_at) %>
        </h3> 
      <% end %>
    </div>
    <br />
  </div>
  <hr>
  <div class="form-group">
    <h4>
      <%= f.label :characteristic_of_user, "特徵：" %>
    </h4>
    <%= f.text_field :characteristic_of_user,:placeholder => "請輸入特徵，方便球友們找到您！", :class => "form-control" %>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-6">  
        <div class="button-1">
          <%= link_to '取消', root_path %>
        </div>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-6">
          <%= f.submit "確認", class: "button-1"%>
      </div>
    </div>
  </div>    
<% end %>