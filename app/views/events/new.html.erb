<% google_config = Rails.application.config_for(:google) %>
<div class="container content">
	<div class="row">
		<div class="col-sm-2 col-md-2 col-xs-2"><h3>
			<%= link_to "<", :back %></h3>
		</div>

		<div class="col-sm-8 col-md-8 col-xs-8 centered">
			<div><h3><%= link_to "<", "/day_before" %>   Today  <%= link_to ">", "/day_after" %></h3></div>	
		</div> 
		
		<nav class="open col-md-2 col-sm-2 col-xs-2">
			<ul>
				<li><a href="#">Home</a></li>
				<li><a href="#">about</a></li>
				<li><a href="#">contact</a></li>	
			</ul>
		</nav>

		<div id="menu-trigger">
			<img class="hamburger" src="/images/menu.png" alt="trigger">
		</div>
	</div>	
	<div class="row">
		<div class="place_detail col-md-4 col-sm-4 col-xs-4">
			<div>
				<img src="https://maps.googleapis.com/maps/api/streetview?size=100x100&location=<%= @place.latitude %>,<%= @place.longitude %>&pitch=-0.76&key=<%=google_config["app_id"]%>" alt="revenue image">
			</div>
		</div>

		<div class=" col-md-8 col-sm-8 col-xs-8">
			<div>	
				<%= @place.name %>		
			</div>

			<div>
        <% if params[:distance].to_i > 1000 %>
          <%= '距離約' + (params[:distance].to_i/1000).round(2).to_s + '公里' %>
        <% else %>
          <%= '距離約' + params[:distance] + '公尺' %>
        <% end %>
       </div>
		</div>
		<div class="clearfix"></div>	
		<hr>
		<div><%#= @place.nearby_store %></div>
	</div>
	
	<%= form_for @event, :url => events_path(:place_id => @place.place_id) do |f| %>
		<div class="text-center">
			<h3>
				<%= f.time_field(:start_at, :min => Time.now.strftime("%I:%M%p")) %>
			</h3>
			<hr>
			<h3>
				<%= f.time_field(:end_at, :min => Time.now.strftime("%I:%M%p")) %>
			</h3>
			<br />
		</div>
		<hr>
		<%= link_to '取消', :back, :class => "pull-right btn btn-link" %>
		<%=  f.submit "確認", :class => "pull-right btn btn-link" %>
	<% end %>
</div>

<script>
	$(document).on('ready', function(){
	  $('#input-3').rating({displayOnly: true, step: 0.5});
	});
	$(document).ready(function() {
	  $('#menu-trigger').click(function(){
	    $('nav').toggleClass('open');
	  });
	});

</script>
